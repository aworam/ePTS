@model ePTS.Models.ViewModels.ApplicationUsersViewModel

@{
    ViewData["Title"] = "User Details";
}

<h1>Details</h1>

<div>
    <h4>User details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessFailedCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessFailedCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LockoutEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LockoutEnabled)

            @if (Model.LockoutEnabled == true)
            {
                @string.Format("True")
            }
            else
            {
                @string.Format("False")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LockoutEnd)
        </dt>
        <dd class="col-sm-10">
            @if (Model.LockoutEnd != null)
            {

                if (Model.LockoutEnd.Value.UtcDateTime > DateTime.Now)
                {
                    @string.Format("Locked until: ")
                    @Html.DisplayFor(modelItem => Model.LockoutEnd.Value.UtcDateTime)
                }
            }
        </dd>
    </dl>
</div>
<div>
    <!--footer buttons start-->
    <div class="row mt-5">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary mr-1"><i class="bi bi-chevron-left"></i> Back to List</a>
            <a asp-action="Reset" asp-route-id="@Model?.Id" class="btn btn-secondary mr-2"><i class="bi bi-arrow-clockwise"></i> Reset Password</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
        </div>
        <div class="col text-right"></div>
    </div>
    <!--footer buttons end-->
</div>

