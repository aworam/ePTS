@model ePTS.Entities.Core.SchoolAcademicYear

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Academic Year?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class = "col-sm-2">
            School
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Schools.OrganizationName)
        </dd>
        <dt class = "col-sm-2">
            Academic Year
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AcademicYears.AcademicYear)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SchoolAcademicYearId" />
        <a asp-action="Index" asp-route-id="@ViewBag.ParentId" class="btn btn-outline-secondary me-1"><i class="bi bi-arrow-return-left"></i> Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
