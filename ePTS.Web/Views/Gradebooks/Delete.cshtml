@model ePTS.Entities.Gradebooks.Gradebook

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Gradebook?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GradebookPeriods)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GradebookPeriods.GradebookPeriodName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GradeLevels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GradeLevels.GradeLevel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolAcademicYears)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchoolAcademicYears.AcademicYears)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GradebookId" />
        <a asp-action="Index"  asp-route-id="@ViewBag.ParentId" class="btn btn-outline-secondary me-1"><i class="bi bi-arrow-return-left"></i> Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
